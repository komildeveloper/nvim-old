{
  // Format On Save
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "prisma",
    "html",
    "yaml",
    "jsonc",
    "python"
  ],

  // Prettier
  "prettier.printWidth": 80,
  "prettier.semi": true,
  "prettier.arrowParens": "avoid",
  "prettier.singleQuote": true,
  "prettier.trailingComma": "none",
  "prettier.jsxSingleQuote": true,

  // Stylelintplus
  "stylelintplus.cssInJs": true,

  // HTML-CSS Support
  "html-css-support.enabledLanguages": [
    "html",
    "vue",
    "blade",
    "htmldjango",
    "typescriptreact",
    "javascriptreact"
  ]
}
